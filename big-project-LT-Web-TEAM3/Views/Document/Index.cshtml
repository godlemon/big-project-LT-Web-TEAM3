@model IEnumerable<big_project_LT_Web_TEAM3.Models.Document>

<h1 class="font-weight-bold">Danh sách văn bản</h1>

<div class="form-group">
    <a asp-action="Create" class="btn btn-outline-primary">Tạo mới</a>
    <form class="input-group w-50 float-right" asp-action="Search" method="get">
        <input type="text" class="form-control" name="term" />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Tìm</button>
        </div>
    </form>
</div>
    

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-orderBy="DocumentName" asp-route-dsc="@ViewData["DocumentName"]" asp-route-page="@ViewData["Page"]">@Html.DisplayNameFor(model => model.DocumentName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-orderBy="WhiterName" asp-route-dsc="@ViewData["WhiterName"]" asp-route-page="@ViewData["Page"]">@Html.DisplayNameFor(model => model.WhiterName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-orderBy="EndDate" asp-route-dsc="@ViewData["EndDate"]" asp-route-page="@ViewData["Page"]">@Html.DisplayNameFor(model => model.EndDate)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-orderBy="Filename" asp-route-dsc="@ViewData["Filename"]" asp-route-page="@ViewData["Page"]">@Html.DisplayNameFor(model => model.Filename)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-orderBy="Classifys" asp-route-dsc="@ViewData["Classifys"]" asp-route-page="@ViewData["Page"]">@Html.DisplayNameFor(model => model.Classifys.Name)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhiterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classifys.Name)
            </td>
            <td>
                <a asp-action="Read" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Tải về</a> |
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                
            </td>
        </tr>
}

<tr>
    <td colspan="2">
            @{
                int pages = ViewData.ContainsKey("Pages") ? (int)ViewData["Pages"] : 0;
                int p = ViewData.ContainsKey("Page") ? (int)ViewData["Page"] : 0;
            }
            <form method="get">
                <input type="submit" value="Đến trang" /> Trang <input type="number" max="@pages" min="1" name="page" value="@p" /> of @pages
            </form>
        </td>
        <td colspan="3"><strong>Tổng số: @Model.Count()</strong></td>
</tr>

    </tbody>
</table>