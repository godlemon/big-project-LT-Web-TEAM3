@model big_project_LT_Web_TEAM3.Models.Document

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNew">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DocumentName" class="control-label"></label>
                <input asp-for="DocumentName" class="form-control" />
                <span asp-validation-for="DocumentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhiterName" class="control-label"></label>
                <input asp-for="WhiterName" class="form-control" />
                <span asp-validation-for="WhiterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            @{
                Classify[] classify = (Classify[])ViewData["Classify"];
            }
            <div class="form-group">
                <label asp-for="Classify" class="control-label"></label>
                <div>
                    <select name="classify" class="select2-container">
                        @foreach (Classify m in classify)
                        {
                                <option value="@m.Id">@m.Name</option>
                        }
                     </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
