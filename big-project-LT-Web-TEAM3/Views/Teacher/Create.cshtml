@model big_project_LT_Web_TEAM3.Models.Teacher

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm giáo viên</h1>

<h4>Điền thông tin giáo viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNew">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="TenGV" class="control-label"></label>
                <input asp-for="TenGV" class="form-control" />
                <span asp-validation-for="TenGV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChucVuGV" class="control-label"></label>
                <input asp-for="ChucVuGV" class="form-control" />
                <span asp-validation-for="ChucVuGV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-light">Danh sách giáo viên</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
